<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="com.ipartek.formacion.musicamvc.entidades">
    
    	<class>com.ipartek.formacion.musicamvc.entidades.Estilo</class>
    	<class>com.ipartek.formacion.musicamvc.entidades.Cancion</class>
    	<class>com.ipartek.formacion.musicamvc.entidades.Usuario</class>
    	<class>com.ipartek.formacion.musicamvc.entidades.Rol</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/musicamvc" />
            <property name="jakarta.persistence.jdbc.user" value="musicamvc_admin" />
            <property name="jakarta.persistence.jdbc.password" value="admin" />

            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>

    </persistence-unit>

</persistence>